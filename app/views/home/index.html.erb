<div id="nav">
  <div class="post-it selected">
    <%= link_to('AVISOS',fetch_avisos_posts_path(school_class_id: @school_class.id), remote: true)%>
  </div>
  <div class="post-it y-bg">
    <%= link_to('MULTIMEDIA', fetch_multimedia_posts_path(school_class_id: @school_class.id), remote: true)%>
