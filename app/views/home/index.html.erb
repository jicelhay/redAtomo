    <%= link_to('COMUNICACIONES',fetch_comunicaciones_posts_path(school_class_id: @school_class.id), remote: true)%>
  </div>
  <div class="post-it o-bg">
    <%= link_to('CONFIGURACION',fetch_configuracion_path(school_class_id: @school_class.id), remote: true)%>
